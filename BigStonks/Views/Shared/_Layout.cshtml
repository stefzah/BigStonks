@using Microsoft.AspNet.Identity
@using BigStonks.Models
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BIG STONKS</title>
    @Styles.Render("~/Content/css")

    <link rel="stylesheet" href="~/Content/bootstrap-light.css">

    @if (Request.IsAuthenticated)
    {

        ApplicationDbContext ctx = new ApplicationDbContext();
        var userId = User.Identity.GetUserId();
        var user = ctx.Users.Find(userId);
        if (user.EnableDarkMode)
        {
            <link rel="stylesheet" href="~/Content/bootstrap-dark.css">
        }
        else
        {
            <link rel="stylesheet" href="~/Content/bootstrap-light.css">
        }

    }

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    <li>
                        @using (Html.BeginForm("Index", "Stock", FormMethod.Get))
                        {
                            <div class="input-group" style="width:100%">
                                <input type="search" class="form-control rounded" placeholder="Search Stock" aria-label="Search"
                                       aria-describedby="search-addon" style="height:60px; width:100%" />
                            </div>
                        }
                    </li>
                    <li><a href="@Url.Action("Index", "Stock")" class="fas fa-home fa-3x" style="padding-top:20px"></a></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" style="padding-top:15px">

        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)




</body>
</html>
