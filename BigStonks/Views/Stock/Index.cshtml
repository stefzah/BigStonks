@model IEnumerable<BigStonks.Models.Stock>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-striped table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Ticker:</th>
            <th>Price:</th>
            <th>Change:</th>
            <th>ChangePercent:</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() == 0)
        {
            <tr>
                <td colspan="3" style="color:red">
                    No Match Any Ticker
                </td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
            <tr>
            <td>@item.Ticker</td>
            <td>@item.Price</td>
            <td>@item.Change</td>
            <td>@item.ChangePercent</td>
            </tr>
        }
    }
        </tbody>
    </table>